server {
    listen 80 default_server;
    listen [::]:80 default_server ipv6only=on;

    index outside.html;
    root /var/www;

    server_name compbox;

    location / {
        root /var/www/screens;
    }

    location = /stream {
        proxy_pass http://localhost:5001/;
        proxy_buffering off;
    }

    location = /stream/ {
        return 301 /stream;
    }

    location = /monitor {
        return 301 /monitor/;
    }

    location /monitor/ {
        proxy_pass http://localhost:5002/;
        proxy_buffering off;
    }

    location /comp-api {
        proxy_pass http://localhost:5112;
    }
}
