#!/bin/bash
SERVICE_NAME='<%= @service_name %>'
PID_FILE='/var/run/<%= @service_name %>.pid'
start() {
    <% if @start_dir %>
        cd <%= @start_dir %>
    <% end %>
    <%= @start_command %>
    echo $! > $PID_FILE
}
stop() {
    if [ -f $PID_FILE ]; then
        kill $(cat $PID_FILE);
    fi
}
status() {
    if [ ! -f $PID_FILE ]; then
        echo "$SERVICE_NAME is not running"
        exit 1
    else
        if kill -0 $(cat $PID_FILE); then
            echo "$SERVICE_NAME is running"
            exit 0
        else
            echo "$SERVICE_NAME is not running"
            exit 1
        fi
    fi
}
case "$1" in
  start)
        start
        ;;
  stop)
        stop
        ;;
  status)
        status
        ;;
  restart|reload)
        stop
        start
        ;;
  *)
        echo "Usage: $0 {start|stop|restart|reload|status}"
        exit 1
esac
